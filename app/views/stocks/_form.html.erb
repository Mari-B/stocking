<%= form_with(model: stock, local: true) do |form| %>
  <% if stock.errors.any? %>
    <div id="error_explanation">
      <p><%= pluralize(stock.errors.count, "error") %> prohibited this stock from being saved:</p>

      <ul>
        <% stock.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <div class="field">
      <%= form.label :ticker %>
      <%= form.text_field :ticker, class: "form-control" %>
    </div>

    <div class="field">
      <%= form.number_field :user_id, id: :stock_user_id, value: current_user.id, type: :hidden %>
    </div>

    <br />

    <div class="actions">
      <%= form.submit class:"btn btn-dark" %>
    </div>
  </div>
<% end %>
